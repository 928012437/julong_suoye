.qrcode-img {
  height: auto;
}

.qrcode-img image {
  height: 1000rpx;
  width: 100%;
}

.qrcode .fui-card {
  background: #fe924a;
  color: #fff;
  box-shadow: 0 0.1rem 0.1rem rgba(204, 204, 204, 0.3);
  border: 1px solid #ccc;
  margin: 20rpx;
  position: relative;
  border-radius: 6rpx;
  font-size: 30rpx;
  padding: 20rpx;
}
