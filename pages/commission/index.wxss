.commission .user-info {
  width: 100%;
  height: 160rpx;
  background: #fe5455;
}

.commission .user-info {
  border-bottom: 1px solid #fe9292;
}

.commission .user-info image {
  border-radius: 50%;
}

.commission .user-info .title {
  color: #fff;
  font-size: 30rpx;
  line-height: 30rpx;
}

.commission .user-info .subtitle {
  color: #fef31f;
  font-size: 26rpx;
  line-height: 32rpx;
}

.commission .user-info .text {
  color: #fff;
}

.commission .userblock {
  background: #fe5455;
  color: #fff;
  padding: 0 30rpx;
}

.commission .userblock .line {
  padding: 15rpx 0 15rpx 0;
}

.commission .userblock .line.total {
  font-size: 30rpx;
}

.commission .userblock .line.total .num {
  font-size: 50rpx;
}

.commission .userblock .line.able {
  font-size: 27rpx;
}

.commission .userblock .line.able .num {
  font-size: 40rpx;
}

.commission .userblock .line .text {
  padding-right: 230rpx;
}

.commission .userblock .line .btn {
  height: 50rpx;
  width: auto;
  padding: 0 15rpx;
  border: 1px solid #fff;
  line-height: 50rpx;
  border-radius: 25rpx;
  font-size: 30rpx;
  color: inherit;
}

.commission .fui-block-group {
  margin-top: 0;
}

.commission .fui-block-group .fui-block-child .icon {
  height: auto;
}

.commission .fui-block-group .fui-block-child .icon image {
  width: 70rpx;
  height: 70rpx;
}

.edtion {
  width: 100%;
  position: fixed;
  bottom: 100rpx;
  color: #999;
  font-size: 14px;
  text-align: center;
  padding: 20rpx 0;
}
