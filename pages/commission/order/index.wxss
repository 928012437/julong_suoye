.row-remark {
  text-align: right;
  position: relative;
  -webkit-flex-shrink: 0;
  flex-shrink: 0;
  padding-left: 20rpx;
  color: #aaa;
  font-size: 26rpx;
}

.row-remark:before {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  width: 1px;
  height: 100%;
  background: #eee;
}

.center {
  text-align: center;
}

.edtion {
  color: #999;
  font-size: 14px;
  text-align: center;
  padding: 20rpx 0;
}

.empty-tip {
  padding: 150rpx;
}

.light {
  height: 260rpx;
  width: 240rpx;
}

.text-cancel {
  padding: 40rpx;
}

.com-order .fui-cell-group .fui-cell .fui-cell-label {
  width: auto;
  font-size: 28rpx;
}

.com-order .fui-cell-group .fui-cell .fui-cell-info {
  text-align: right;
  color: #333;
  font-size: 28rpx;
}

.com-order .fui-list .fui-list-inner .row .row-text {
  font-size: 28rpx;
}

.com-order .fui-cell-group {
  margin-top: 0;
}

.com-order .fui-cell-group .details {
  display: none;
}

.com-order .fui-cell-group.toggleSend-group .details {
  display: -webkit-flex;
  display: flex;
  font-size: 26rpx;
}

.fui-cell-group.toggleSend-group .fui-cell .fui-cell-remark::after {
  -webkit-transform: rotate(135deg);
  -ms-transform: rotate(135deg);
  transform: rotate(135deg);
}
